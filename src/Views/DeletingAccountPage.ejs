<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Deleting Account</title>
    <style>
        body {
            font-family: 'Arial', sans-serif;
            text-align: center;
            padding: 50px;
        }
        .loading-spinner {
            border: 8px solid #f3f3f3; /* Light grey */
            border-top: 8px solid #3498db; /* Blue */
            border-radius: 50%;
            width: 50px;
            height: 50px;
            animation: spin 2s linear infinite;
            margin: 20px auto;
        }
        @keyframes spin {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }
        .message {
            font-size: 1.2rem;
            margin-top: 20px;
        }
      /* Additional styles for settings */
      .dark-mode { background-color: #121212b3; color: #f0f0f0; }
      .high-contrast { color: black; background-color: rgba(242, 0, 255, 0.428); }
    </style>
    
</head>
<body>
    <h1>Deleting your account...</h1>
    <div class="loading-spinner"></div>
    <p class="message">You will be redirected to the homepage when the account is successfully deleted.</p>

    <script>
        setTimeout(() => {
            window.location.href = '/api/home'; // Redirect after 2 seconds
        }, 3000); // 3 secs
    </script>
<script>
    // Load saved settings on page load
    window.onload = function () {
        const isDarkMode = localStorage.getItem('darkMode') === 'true';
        const isHighContrast = localStorage.getItem('highContrast') === 'true';
        const savedFontSize = localStorage.getItem('fontSize') || '14'; // Default to 14px
  
        // Apply dark mode
        if (isDarkMode) document.body.classList.add('dark-mode');
  
        // Apply high contrast mode
        if (isHighContrast) document.body.classList.add('high-contrast');
  
        // Apply font size to all relevant elements except the title
        document.body.style.fontSize = `${savedFontSize}px`;
  
        document.querySelectorAll('input, button, label, .Register_Button, .Form_Group, p, a, .navbar_buttons_list button').forEach(el => {
            el.style.fontSize = `${savedFontSize}px`;
        });
  
    };
  </script>
</body>
</html>
