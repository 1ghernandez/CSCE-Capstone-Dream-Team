<!-- BODY START -->
<body>
    <!-- Projects Container... add as many divs as you want Projects -->
    <div class="Projects-container">
        <ul class="Projects-list">
            <!-- The two li's below are for the course description and the course image-->
             <!-- They may be flipped depending on the desired design -->
            <li class="project-description">
                <h2>Hello World!</h2>
                <p>This course teaches users how to print "Hello World!" using block code.
                Equally, the corresponding text code is provided for users to learn.</p>
                <% if (locals.user && locals.user !== null) { %>
                <a href="/api/project-tutorials/hello-world">
                    <button class="project-button">
                        Start Project!
                    </button>
                </a>
                <% } else { %> <!-- If the user is not logged in, the button will be 
                                disabled and the user will be redirected to the login page -->
                    <a href="/api/login">
                        <button class="project-button" aria-disabled="true">
                            Start Project!
                        </button>
                    </a>
                <% } %>
                <!-- Implementing progress bar -->
                <div class="progress_container">
                    <div class="progress_bar" 
                         role="progressbar"
                         aria-valuenow="<%= user_progress.project1_progress %>"
                         aria-valuemin="0"
                         aria-valuemax="100"
                         style="width: <%= user_progress.project1_progress %>%">
                        <%= Math.round(user_progress.project1_progress) %>%
                    </div>
                </div>
            </li>
            <li class="project-image">
                <img src="../Public/ImagesUsed/HelloWorld.jpeg" alt="Hello World! course image">
            </li>
        </ul>
    </div>
    <div class="Projects-container">
        <ul class="Projects-list">
            <!-- The two li's below are for the course description and the course image-->
             <!-- They may be flipped depending on the desired design -->
            <li class="project-image">
                <img src="../Public/ImagesUsed/HelloWorld.jpeg" alt="Hello World! course image">
            </li>
            <li class="project-description">
                <h2>Insert Title</h2>
                <p>Insert Description<br>
                <% if (locals.user && locals.user !== null) { %>
                    <a href="#Comming Soon" aria-label="Coming Soon" aria-disabled="true">
                        <button class="project-button">
                            Start Project!
                        </button>
                    </a>
                <% } else { %> <!-- If the user is not logged in, the button will be 
                                    disabled and the user will be redirected to the login page -->
                    <a href="/api/login">
                        <button class="project-button" aria-disabled="true">
                            Start Project!
                        </button>
                    </a>
                <% } %>
                <!-- Implementing progress bar -->
                <div class="progress_container">
                    <div class="progress_bar" style="width: <%= user_progress.project2_progress %>%" id="progress_bar">
                        <%= user_progress.project2_progress %>%
                    </div>
                </div>
            </li>
        </ul>
    </div>
    <div class="Projects-container">
        <ul class="Projects-list">
            <!-- The two li's below are for the course description and the course image-->
             <!-- They may be flipped depending on the desired design -->
            <li class="project-description">
                <h2>Insert Title</h2>
                <p>Insert Description<br>
                <% if (locals.user && locals.user !== null) { %>
                    <a href="#Comming Soon" aria-label="Coming Soon" aria-disabled="true">
                        <button class="project-button">
                            Start Project!
                        </button>
                    </a>
                <% } else { %> <!-- If the user is not logged in, the button will be 
                                        disabled and the user will be redirected to the login page -->
                    <a href="/api/login">
                        <button class="project-button" aria-disabled="true">
                            Start Project!
                        </button>
                    </a>
                <% } %>
                <!-- Implementing progress bar -->
                <div class="progress_container">
                    <div class="progress_bar" style="width: <%= user_progress.project3_progress %>%" id="progress_bar">
                        <%= user_progress.project3_progress %>%
                    </div>
                </div>
            </li>
            <li class="project-image">
                <img src="../Public/ImagesUsed/HelloWorld.jpeg" alt="Hello World! course image">
            </li>
        </ul>
    </div>
